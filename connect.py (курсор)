import psycopg2 
  from psycopg2 import Error 
  
  try: connection = psycopg2.connect(user="postgres", 
                                     password="24022003", 
                                     host="127.0.0.1", 
                                     port="5432", 
                                     database="blogdb") 
    cursor = connection.cursor()
    create_table_query = "drop table if exists entries;
    create table entries(id serial primary key not null, 
                         date timestamp with time zone not null default now(), 
                         title varchar(80) not null, content text not null);"
     
    cursor.execute(create_table_query) 
    connection.commit()
    print("Таблица успішно створена в PostgreSQL")
    
    insert_query = "INSERT INTO entries(title, content) VALUES('My first blog entry', 'This is some great content by Yelyzaveta Babenko');" 
    cursor.execute(insert_query)
    insert_query = "INSERT INTO entries(title, content) VALUES('Done this task', 'No description :-)');"
    cursor.execute(insert_query) 
    connection.commit()print("одна запись успішно вставлена") 
    
    cursor.execute("SELECT * from entries") 
      record = cursor.fetchall()
      print("Результат", record)
      
    except (Exception, Error) as error: 
      print("Ошибка при работі з PostgreSQL", error) 
    finally: if connection: cursor.close()connection.close()
      print("З'єднання з PostgreSQL зачинено")
